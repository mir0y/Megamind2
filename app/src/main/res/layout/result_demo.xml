<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_height="300dip"
        android:layout_width="360dip"
        android:orientation="vertical"
        android:gravity="center_horizontal"

        >

        <ImageView
            android:id="@+id/resImg"
            android:scaleType="centerCrop"
            android:layout_width="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
        />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="28sp"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:textStyle="bold"
            android:text=""
            android:id="@+id/Filmname"
            android:layout_height="wrap_content" />
    </LinearLayout><View  android:layout_height="2px" android:background="#FFFFFF" android:layout_width="fill_parent"></View>

<ScrollView
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:scrollbars="vertical"

    >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

             <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5">
                 <TextView
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:text="时长"
                     android:gravity="left"
                     android:textSize="25sp"
                     android:layout_weight="3"/>
                 <TextView
                     android:id="@+id/Tlong"
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:gravity="right"
                     android:textSize="20sp"
                     android:layout_weight="2"
                     android:text="" />
             </LinearLayout><View  android:layout_height="1px" android:background="#555555" android:layout_width="fill_parent"></View>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="上映日期"
                    android:gravity="left"
                    android:textSize="25sp"
                    android:layout_weight="3"/>
                <TextView
                    android:id="@+id/Date"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textSize="20sp"
                    android:layout_weight="2"
                    android:text="" />
            </LinearLayout><View  android:layout_height="1px" android:background="#555555" android:layout_width="fill_parent"></View>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="国家/地区"
                    android:gravity="left"
                    android:textSize="25sp"
                    android:layout_weight="3"/>
                <TextView
                    android:id="@+id/Area"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textSize="20sp"
                    android:layout_weight="2"
                    android:text="" />
            </LinearLayout><View  android:layout_height="1px" android:background="#555555" android:layout_width="fill_parent"></View>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="导演"
                    android:gravity="left"
                    android:textSize="25sp"
                    android:layout_weight="3"/>
                <TextView
                    android:id="@+id/Director"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textSize="20sp"
                    android:layout_weight="2"
                    android:text="" />
            </LinearLayout><View  android:layout_height="1px" android:background="#555555" android:layout_width="fill_parent"></View>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="主演"
                android:gravity="left"
                android:textSize="25sp"
                android:layout_weight="3"/>
            <TextView
                android:id="@+id/actors"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textSize="20sp"
                android:layout_weight="2"
                android:text="" />
        </LinearLayout><View  android:layout_height="1px" android:background="#555555" android:layout_width="fill_parent"></View>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="简介"
                android:gravity="left"
                android:textSize="25sp"
                android:layout_weight="3"/>
            <TextView
                android:id="@+id/more"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textSize="20sp"
                android:layout_weight="2"
                android:text="" />
        </LinearLayout>
    </LinearLayout>
   </ScrollView>
</LinearLayout>


